<h3><%= "Invoice ##{@invoice.id}" %></h3>

<p><%= "Status: #{@invoice.status.titleize}" %></p>
<p><%= "Created on: #{@invoice.format_created_date}" %></p>
<p><%= "Total Revenue: $#{@invoice.total_revenue_by_merchant(@merchant)}" %></p>
<p><%= "Customer: #{@invoice.customer.full_name}" %></p>

<h3>Items on this Invoice:</h3>
<style>table, th, td {border:1px solid black;}</style>
<table>
  <thead>
    <th>Item Name</th>
    <th>Quantity</th>
    <th>Unit Price</th>
    <th>Status</th>
  </thead>
  <tbody>
    <% @invoice_items.each do |invoice_item| %>
      <tr>
        <td><%= invoice_item.item.name %></td>
        <td><%= invoice_item.quantity %></td>
        <td><%= invoice_item.format_unit_price %></td>
        <td>
          <%= form_tag /invoice_items/:invoice_item_id/edit, method: :post do # not sure this path is correct %> 
            <%= select_tag 'status', options_for_select(['Pending', 'Packaged', 'Shipped'], invoice_item.status), class: 'status-dropdown' %>
            <%= submit_tag 'Update Item Status', class: 'update-button' %>
          <% end %>
          # <%= invoice_item.status %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
