<h3>Edit Item</h3>
<%= form_with url: "/merchants/#{@merchant.id}/items/#{@item.id}", method: :patch, data: { turbo: false } do |f| %>
  <%= f.label :name, "Name: " %>
  <%= f.text_field :name, value: @item.name %></br>

  <%= f.label :description, "Description: " %>
  <%= f.text_field :description, value: @item.description %></br>

  <%= f.label :current_price, "Current Price: " %>
  <%= f.number_field :unit_price, value: @item.unit_price %></br>

  <%= f.submit "Submit" %>
<% end %>