<h3>New Item</h3>
<%= form_with url: "/merchants/#{@merchant.id}/items", method: :post, data: { turbo: false } do |f| %>
  <%= f.label :name, "Name: " %>
  <%= f.text_field :name %></br>

  <%= f.label :description, "Description: " %>
  <%= f.text_field :description %></br>

  <%= f.label :current_price, "Current Price: " %>
  <%= f.number_field :unit_price %></br>

  <%= f.submit "Submit" %>
<% end %>